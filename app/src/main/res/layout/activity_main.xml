<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/mainactivity_actionbar"
        layout="@layout/actionbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/mainactivity_actionbar">

        <TextView
            android:id="@+id/mainactivity_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <Button
            android:id="@+id/mainactivity_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"/>

        <Button
            android:id="@+id/mainactivity_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_activity"/>

        <FrameLayout
            android:id="@+id/mainactivity_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/accent_material_light" />
    </LinearLayout>

</LinearLayout>
